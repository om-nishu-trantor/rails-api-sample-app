<%= javascript_include_tag "angular_controllers/home_controller" %>

<%= content_for :title, "To Do List" %>

<div id="container" ng-controller="ToDoListCtrl">
  <h1>To-Do List</h1>

  <form id="new_task" ng-submit="submit()">
    <input type="text"  ng-model="text" name="task[name]" id="task_name">
    <input type="submit" value="Add">
  </form>
  <ul id="tasks">
    <li ng-repeat="todo in todos">
      <p>{{todo.name}}</p>
    </li>
  </ul>
</div>
